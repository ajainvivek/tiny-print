{
    "extends": [
        "standard",
        "prettier",
        "plugin:jest/recommended"
    ],
    "plugins": [
        "import",
        "prettier",
        "jest"
    ],
    "env": {
        "node": true,
        "jest/globals": true
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
              "trailingComma": "es5",
              "singleQuote": true,
              "printWidth": 80
            }
        ]
    }
}